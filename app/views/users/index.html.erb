<% if @users.blank? %>
  <p>There are not any users currently in the system.</p>
<% else %>
  <h1>All users</h1>
  <main>
    <ul class="users_list">
      <% @users.each do |user| %>
        
          <li class="list_item">
          
          <a class="link" href="/users/<%= user.id %>">
          <% if user && user.photo %>
  <%= image_tag(user.photo) %>
<% end %>
            <div class="photo">
             
            </div>
            <div class="user_name">
              <h3><%= user.name %></h3>
              <p>Number of posts: <%= user.postsCounter %></p>
            </div>
            </a>
          </li>
        
      <% end %>
    </ul>
  </main>
<% end %>